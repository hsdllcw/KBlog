---
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom"
      xmlns:media="http://www.rssboard.org/media-rss">
  <title><![CDATA[${ site.title }]]></title>
  <link href="${ site.url }${root_url}/atom.xml" rel="self"/>
  <link href="${ site.url }${root_url}/"/>
  <updated>${ site.time?datetime?iso_local }</updated>
  <id>${ site.url }${root_url}/</id>
  <author>
    <name><![CDATA[${ site.author}]]></name>
    <#if site.email?? ><email><![CDATA[${ site.email }]]></email></#if>
  </author>
  <generator uri="http://press.opoo.org/">OpooPress</generator>

  <#if (site.get("pageList")?size <= 20)>
	<#assign the_posts = site.get("pageList") >
  <#else>
    <#assign the_posts = site.get("pageList")[0..500]>
  </#if>
  <#list the_posts as post>
  <entry>
    <title type="html"><![CDATA[${ post.title}]]></title>
    <link href="${ site.url }${root_url}${ post.uri }" rel="alternate"/>
    <updated>${ post.publishDate?datetime?iso_local}</updated>
    <id>${ site.url }${root_url}${ post.uri }</id>
    <#if post.category.parent?? >
      <category term="${post.category.parent.name}" label="${post.category.name}"/>
    <#else>
      <category term="${post.category.name}" label="${post.category.name}"/>
    </#if>
    <#if post.linkIs && post.outlink??>
    <source>
      <title><![CDATA[${post.title}]]></title>
      <link href="${post.outlink}" rel="alternate"/>
      <id>${post.outlink}</id>
    </source>
    </#if>
    <#if post.poster?? ><media:thumbnail url="${post.poster}"/></#if>
    <#if post.desription?? ><summary type="html"><![CDATA[${post.desription}]]></summary></#if>
  </entry>
</#list>
</feed>