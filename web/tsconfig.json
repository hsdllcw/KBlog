{
  "compilerOptions": {
    "target": "es5",
    "types": ["node"], // 包含 Node.js 类型定义
    "lib": ["es6", "dom"],
    "module": "commonjs", // 支持 require 语法
    "moduleResolution": "node",
    "strict": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}
